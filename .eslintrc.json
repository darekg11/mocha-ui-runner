{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": 0,
        "no-console": [ "error", { "allow": [ "error" ] }],
        "class-methods-use-this": 0,
        "quotes": [ "error", "double" ],
        "no-param-reassign": [ "error", { "props": true, "ignorePropertyModificationsFor": [ "state" ] } ]
    }
}
